<UserControl x:Class="CenaPlus.Client.Remote.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Style="{StaticResource ContentRoot}" MinWidth="400" >
        <StackPanel>
            <TextBlock Text="Connect to a cena plus server." Margin="0,0,0,10"/>
            <TextBlock Name="txtFoundServerName"/>
            <StackPanel HorizontalAlignment="Stretch" Margin="0,0,0,10">
                <TextBox Name="txtServerAddr"  Text="localhost" Margin="0,0,100,0"/>
                <TextBox Name="txtServerPort" HorizontalAlignment="Right" Width="90"  Text="9999" Margin="10,-23,0,0" />
            </StackPanel>
            <TextBox Name="txtUserName" Text="GasaiYuno"  Margin="0,0,0,10"/>
            <PasswordBox Name="txtPassword" Password="GasaiYuno"  Margin="0,0,0,10"/>
            <StackPanel Orientation="Horizontal"  Margin="0,0,0,10">
                <Button Name="btnLogin" Content="Log in" IsDefault="True" Click="btnLogin_Click" Margin="0,0,10,0"/>
                <Button Name="btnRegister" Content="Register an official account"  Margin="0,0,10,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>
