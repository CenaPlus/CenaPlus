<UserControl x:Class="CenaPlus.Client.Remote.Contest.Problem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Name="txtTitle" Text="" TextAlignment="Center" Style="{StaticResource Heading2}" />
                <RichTextBox Name="txtContent" IsReadOnly="True" BorderThickness="0"/>
                <Button Name="btnSubmit" Content="Submit" HorizontalAlignment="Left" Width="75" Margin="0,10,0,0" Click="btnSubmit_Click"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
