<UserControl x:Class="CenaPlus.Client.Remote.Contest.Submit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <WrapPanel MinWidth="200" HorizontalAlignment="Left">
            <ComboBox Name="lstLanguage" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" SelectedIndex="0" Height="25" Margin="0,0,10,0" SelectedValuePath="Content"/>
            <Button Name="btnSubmit" Content="Submit" Width="75" Click="btnSubmit_Click"/>
        </WrapPanel>
        <TextBox Name="txtCode" Margin="0,35,0,0" AcceptsReturn="true"></TextBox>
    </Grid>
</UserControl>
