<UserControl x:Class="CenaPlus.Client.Remote.Contest.AnswerPush"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Question" Style="{StaticResource Heading2}" />
                <TextBlock x:Name="lbQuestion" Text="" TextWrapping="Wrap" />
                <TextBlock Text="Answer" Style="{StaticResource Heading2}" />
                <TextBlock x:Name="lbAnswer" Text="" TextWrapping="Wrap" />
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
