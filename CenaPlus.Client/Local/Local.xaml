<UserControl x:Class="CenaPlus.Client.Local.Local"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <StackPanel>
            <Image x:Name="imgSourceDirectory" AllowDrop="True" Width="256" Height="256" Source="/CenaPlus.Client;component/Resources/Box.png" Margin="0,0,0,20" DragEnter="imgSourceDirectory_DragEnter" DragLeave="imgSourceDirectory_DragLeave" Drop="imgSourceDirectory_Drop"/>
            <TextBlock Text="Put the source file into the box. (.c/.cpp/.java/.pas/.py/.rb)" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="Make the spj filename to spj.exe(exe supported only.)" HorizontalAlignment="Center"></TextBlock>
            <TextBlock Text="Make sure the test cases were named with the .in,.ans/.out and existed in the same floder with the source." HorizontalAlignment="Center"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
