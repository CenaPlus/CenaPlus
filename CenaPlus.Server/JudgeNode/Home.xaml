<UserControl x:Class="CenaPlus.Server.JudgeNode.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer>
            <StackPanel MinWidth="200">
                <TextBlock Text="Host a judge node" Style="{StaticResource Heading2}" />
                <TextBlock Text="Judger name" Margin="0,0,0,5" />
                <TextBox x:Name="txtName" Margin="0,0,0,20">Local Judge Node</TextBox>
                <TextBlock Text="Port" Margin="0,0,0,5" />
                <TextBox x:Name="txtPort" Text="9880" Margin="0,0,0,20"/>
                <TextBlock Text="Password" Margin="0,0,0,5" />
                <PasswordBox x:Name="txtPassword" Margin="0,0,0,20"></PasswordBox>
                <Button Content="Start" x:Name="btnStart" Click="btnStart_Click"></Button>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
