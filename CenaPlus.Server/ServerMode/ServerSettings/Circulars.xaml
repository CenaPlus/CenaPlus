<UserControl x:Class="CenaPlus.Server.ServerMode.ServerSettings.Circulars"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">

        <TextBlock Text="Circulars" Style="{StaticResource Heading2}" />
        <RichTextBox AcceptsReturn="True" Margin="0,30,0,30"></RichTextBox>
        <Button Content="Save changes" Height="25" VerticalAlignment="Bottom"></Button>
    </Grid>
</UserControl>
