<UserControl x:Class="CenaPlus.Server.ServerMode.Users"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:mui="http://firstfloorsoftware.com/ModernUI"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Style="{StaticResource ContentRoot}">
        <ScrollViewer Margin="0,0,0,30">
            <ListBox x:Name="RecordListBox" >
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <DockPanel Height="50">
                            <Image DockPanel.Dock="Left" Width="50" Height="50" Source="https://www.gravatar.com/avatar/159c4a0a78d0980aca8df9d781d1c755?d\=https://www.SmartOJ.com/img/Non_Avatar.png&amp;s\=50"></Image>
                            <StackPanel HorizontalAlignment="Left">
                                <TextBlock Margin="10,0,0,0" Text="Accepted" FontSize="18" Foreground="Green" />
                                <TextBlock Margin="10,0,0,0"  Text="User: Gasai Yuno / P1000 A+B Problem / 31 ms / 423 KB @1-24-2014 20:56" />
                            </StackPanel>
                        </DockPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </ScrollViewer>
        <WrapPanel>
            <TextBox HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" Text="User" VerticalAlignment="Top" Width="120" Margin="0,0,10,0" />
            <Button Content="Query" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
        </WrapPanel>
        <WrapPanel VerticalAlignment="Bottom" Height="26">
            <Button Content="Delete" Width="75" Margin="0,0,10,0"/>
            <Button Content="Modify" Width="75" Margin="0,0,10,0"/>
            <Button Content="Create temporary users"  Margin="0,0,10,0"/>
            <Button Content="Create a normal user" Margin="0,0,10,0"/>
        </WrapPanel>
    </Grid>
</UserControl>
